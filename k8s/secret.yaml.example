apiVersion: v1
kind: Secret
metadata:
  name: angel-intelligence-secrets
  namespace: default
  labels:
    app: angel-intelligence
type: Opaque
stringData:
  # API Authentication (min 64 characters)
  # Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
  api-auth-token: "your-secure-api-token-here-minimum-64-characters-long"
  
  # Database Configuration
  db-host: "your-db-host"
  db-port: "3306"
  db-database: "ai"
  db-username: "root"
  db-password: "your-password"
  
  # R2 Storage Configuration
  r2-endpoint: "https://your-account.r2.cloudflarestorage.com"
  r2-access-key-id: "your-access-key-id"
  r2-secret-access-key: "your-secret-access-key"
  r2-bucket: "call-recordings"
  
  # HuggingFace Token for pyannote speaker diarization
  # Required for pyannote/speaker-diarization-3.1 model
  # Accept license at: https://huggingface.co/pyannote/speaker-diarization-3.1
  huggingface-token: "hf_your_token_here"

---
# INSTRUCTIONS:
# 1. Copy this file: cp k8s/secret.yaml.example k8s/secret.yaml
# 2. Edit k8s/secret.yaml with your actual credentials
# 3. Apply: kubectl apply -f k8s/secret.yaml
# 4. DO NOT commit k8s/secret.yaml to git (already in .gitignore)
